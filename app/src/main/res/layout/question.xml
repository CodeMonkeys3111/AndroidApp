<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/head_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Hello! This is COMP3111 Layout Testing (Prototype)"
        android:layout_rowWeight="0"
        android:gravity="center_vertical|left"
        android:layout_marginTop="10dp"
        android:maxLength="80"
        android:layout_columnSpan="7"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="@dimen/QuestionRoundButtonSize"
        android:layout_height="@dimen/QuestionRoundButtonSize"
        android:id="@+id/like"
        android:src="@drawable/like"
        android:background="@drawable/round_button_black"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="@dimen/QuestionRoundButtonSize"
        android:layout_height="@dimen/QuestionRoundButtonSize"
        android:id="@+id/dislike"
        android:src="@drawable/dislike"
        android:background="@drawable/round_button_black"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="42"
        android:id="@+id/dislikenumber"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_gravity="center|bottom"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="42"
        android:id="@+id/likenumber"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center|bottom"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp" />

    <ImageButton
        android:layout_width="@dimen/QuestionRoundButtonSize"
        android:layout_height="@dimen/QuestionRoundButtonSize"
        android:id="@+id/reply"
        android:src="@drawable/reply"
        android:background="@drawable/round_button_black"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:layout_row="1"
        android:layout_column="4"
        android:layout_margin="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="0dp"
        android:layout_marginRight="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="42"
        android:id="@+id/replynumber"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_gravity="center|bottom"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/timetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="6"
        android:text="Created: 2015/10/25 19:31"
        android:layout_rowWeight="0"
        android:gravity="center_vertical|left"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:textStyle="italic"
        android:layout_gravity="center_vertical|right"
        android:textSize="12sp" />

</GridLayout>