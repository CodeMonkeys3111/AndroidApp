<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/HeaderColor" >

        <ImageView
            android:id="@+id/gobackbtn"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_goback"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:cropToPadding="false"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="Close" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="COMP3111"
            android:id="@+id/head_reply"
            android:textSize="18sp"
            android:textColor="@color/HeaderText"
            android:layout_toRightOf="@+id/gobackbtn"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical|left"
            android:background="@drawable/complete_transparent_button"
            android:onClick="Close"
            android:singleLine="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:orientation="vertical"
        android:background="@color/SubHeaderColor" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/content_image"
                android:src="@android:drawable/stat_notify_chat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/desc"
                android:text="Description"
                android:textSize="16sp"
                android:layout_toRightOf="@id/content_image"
                android:textColor="@color/question_list_title"
                android:layout_margin="10dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tags:"
                android:id="@+id/tags_pos"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/HeaderText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="none"
                android:id="@+id/hashtags"
                android:textSize="16sp"
                android:textColor="@color/HeaderText"
                android:clickable="true"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="@dimen/RoundButtonSize"
                android:layout_height="@dimen/RoundButtonSize"
                android:id="@+id/likeParentQuestion"
                android:src="@drawable/like"
                android:background="@drawable/round_button_1"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:layout_below="@+id/hashtags" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="42"
                android:id="@+id/likeText"
                android:layout_marginLeft="2dp"
                android:textColor="@color/HeaderText" />

            <ImageButton
                android:layout_width="@dimen/RoundButtonSize"
                android:layout_height="@dimen/RoundButtonSize"
                android:id="@+id/dislikeParentQuestion"
                android:src="@drawable/dislike"
                android:background="@drawable/round_button_1"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="42"
                android:id="@+id/dislikeText"
                android:textColor="@color/HeaderText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timetext"
                android:text="Time Created"
                android:textSize="16sp"
                android:gravity="right"
                android:textColor="@color/question_list_desc" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>