<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/HeaderGrey"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:id="@+id/head"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:textColor="@color/HeaderText"
            android:layout_marginBottom="0dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:background="@color/SubHeaderGrey" >

            <ImageButton
                android:layout_width="@dimen/RoundButtonSize"
                android:layout_height="@dimen/RoundButtonSize"
                android:id="@+id/likeParentQuestion"
                android:src="@drawable/like"
                android:background="@drawable/round_button_1"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/desc" />

            <ImageButton
                android:layout_width="@dimen/RoundButtonSize"
                android:layout_height="@dimen/RoundButtonSize"
                android:id="@+id/dislikeParentQuestion"
                android:src="@drawable/dislike"
                android:background="@drawable/round_button_1"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_toRightOf="@+id/likeText"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/desc"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/desc"
                android:layout_alignParentStart="true"
                android:text="Description"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/HeaderText"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timetext"
                android:text="Time Created"
                android:textSize="16sp"
                android:textColor="@color/HeaderText"
                android:layout_alignParentEnd="false"
                android:layout_toLeftOf="@+id/dislikeParentQuestion"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/dislikeParentQuestion"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="42"
                android:id="@+id/likeText"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="false"
                android:layout_toRightOf="@+id/likeParentQuestion"
                android:layout_alignBottom="@+id/likeParentQuestion"
                android:layout_marginRight="5dp"
                android:textColor="@color/HeaderText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="42"
                android:id="@+id/dislikeText"
                android:layout_marginRight="5dp"
                android:textColor="@color/HeaderText"
                android:layout_toRightOf="@+id/dislikeParentQuestion"
                android:layout_alignBottom="@+id/dislikeParentQuestion" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>