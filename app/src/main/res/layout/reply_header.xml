<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_desc"
        android:orientation="vertical"
        android:background="@color/SubHeaderColor" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/content_image"
                android:src="@android:drawable/stat_notify_chat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/question_desc"
                android:text="Description"
                android:textSize="16sp"
                android:textColor="@color/question_list_title"
                android:layout_margin="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tags:"
                android:id="@+id/tags_pos"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/HeaderText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="none"
                android:id="@+id/parent_question_hashtags"
                android:textSize="16sp"
                android:textColor="@color/HeaderText"
                android:clickable="true"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="@dimen/RoundButtonSize"
                android:layout_height="@dimen/RoundButtonSize"
                android:id="@+id/parent_question_like_button"
                android:src="@drawable/like"
                android:background="@drawable/round_button_1"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:layout_below="@+id/parent_question_hashtags" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="42"
                android:id="@+id/parent_question_like_text"
                android:layout_marginLeft="2dp"
                android:textColor="@color/HeaderText" />

            <ImageButton
                android:layout_width="@dimen/RoundButtonSize"
                android:layout_height="@dimen/RoundButtonSize"
                android:id="@+id/parent_question_dislike_button"
                android:src="@drawable/dislike"
                android:background="@drawable/round_button_1"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="42"
                android:id="@+id/parent_question_dislike_text"
                android:textColor="@color/HeaderText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent_question_time_text"
                android:text="Time Created"
                android:textSize="16sp"
                android:gravity="right"
                android:textColor="@color/question_list_desc" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>