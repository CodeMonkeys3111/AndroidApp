<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="5dp">
    <TextView
        android:layout_width="@dimen/ReplyRoundButtonSize"
        android:layout_height="@dimen/ReplyRoundButtonSize"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-420"
        android:id="@+id/order"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@drawable/round_button_1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/replyMsg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reply messageReply messageReply messageReply messageReply messageReply messageReply message"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">
            <ImageButton
                android:layout_width="@dimen/RoundButtonSize"
                android:layout_height="@dimen/RoundButtonSize"
                android:id="@+id/ReplyLike"
                android:src="@drawable/like"
                android:background="@drawable/round_button_1"
                android:padding="6dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:layout_width="@dimen/RoundButtonSize"
                android:layout_height="@dimen/RoundButtonSize"
                android:id="@+id/ReplyDislike"
                android:src="@drawable/dislike"
                android:background="@drawable/round_button_1"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/timetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Time Created:"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>