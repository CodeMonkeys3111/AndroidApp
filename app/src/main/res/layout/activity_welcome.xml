<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_name"
        android:id="@+id/welcome_title"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="@color/welcome_title_color"/>

    <TextView
        android:layout_width="298dp"
        android:textColor="@color/welcome_body_color"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/question_room_descibe"
        android:id="@+id/welcome_body"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:singleLine="false"
        android:editable="false"
        android:gravity="center" />

    <ImageView
        android:id="@+id/team_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:clickable="false"
        android:background="@null"
        android:layout_weight="2"
        android:src="@drawable/welcome_icon" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/try_button"
        android:text="Try it out!"
        style="@style/ButtonCustomHolo"
        android:textStyle="bold"
        android:backgroundTint="@color/try_it_button_background"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="50dp"
        />
</LinearLayout>